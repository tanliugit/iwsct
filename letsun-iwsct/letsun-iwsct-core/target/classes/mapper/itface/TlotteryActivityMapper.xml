<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.letsun.iwsct.itface.mapper.TlotteryActivityMapper" >
    <resultMap id="ResultMapBase" type="com.letsun.iwsct.itface.domain.TlotteryActivity" >
	  	<id property="id" column="id" jdbcType="BIGINT" />
	  	<result property="name" column="NAME" jdbcType="VARCHAR"/>
	  	<result property="corpid" column="CORPID" jdbcType="BIGINT"/>
	  	<result property="orgid" column="ORGID" jdbcType="BIGINT"/>
	  	<result property="status" column="STATUS" jdbcType="INTEGER"/>
	  	<result property="starttime" column="STARTTIME" jdbcType="TIMESTAMP"/>
	  	<result property="endtime" column="ENDTIME" jdbcType="TIMESTAMP"/>
	  	<result property="remark" column="REMARK" jdbcType="VARCHAR"/>
	  	<result property="picurl" column="PICURL" jdbcType="VARCHAR"/>
	  	<result property="creator" column="CREATOR" jdbcType="VARCHAR"/>
	  	<result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
	  	<result property="modifier" column="modifier" jdbcType="VARCHAR"/>
	  	<result property="modifyDate" column="modify_date" jdbcType="TIMESTAMP"/>
	  	<result property="createorg" column="CREATEORG" jdbcType="BIGINT"/>
	  	<result property="createcorp" column="CREATECORP" jdbcType="BIGINT"/>
	  	<result property="type" column="TYPE" jdbcType="INTEGER"/>
	  	<result property="deleted" column="deleted" jdbcType="INTEGER"/>
    </resultMap>
	
	<sql id="BaseColumn">
		id,name,corpid,orgid,status,starttime,endtime,remark,picurl,creator,create_date,modifier,modify_date,createorg,createcorp,type,deleted
	</sql>
	
	<sql id="BaseColumnComplex">
		A.id,A.name,A.corpid,A.orgid,A.status,A.starttime,A.endtime,A.remark,A.picurl,A.creator,A.create_date,A.modifier,A.modify_date,A.createorg,A.createcorp,A.type,A.deleted
	</sql>
	
    <!-- 多表关联查询 -->  
    <select id="selectComplex" resultMap="ResultMapBase">
		select <include refid="BaseColumnComplex"/>
	 	from t_lottery_activity A
	 	<include refid="sqlwhereSearch"/>
    </select>

	<!-- 查询条件 -->
	<sql id="sqlwhereSearch">
		<where>
			<if test="name !=null and name != ''">
				<!--AND A.name like CONCAT('%',#{name},'%')  -->
			</if>
		</where>
	</sql>
</mapper>