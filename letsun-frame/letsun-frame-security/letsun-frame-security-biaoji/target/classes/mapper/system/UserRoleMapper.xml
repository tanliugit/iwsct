<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.letsun.frame.security.system.mapper.UserRoleMapper" >
    <resultMap id="ResultMapBase" type="com.letsun.frame.security.system.domain.UserRole" >
	  	<id property="id" column="id" jdbcType="BIGINT" />
	  	<result property="userId" column="user_id" jdbcType="BIGINT"/>
	  	<result property="roleId" column="role_id" jdbcType="BIGINT"/>
	  	<result property="deleted" column="deleted" jdbcType="BIT"/>
	  	<result property="creator" column="creator" jdbcType="VARCHAR"/>
	  	<result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
	  	<result property="modifier" column="modifier" jdbcType="VARCHAR"/>
	  	<result property="modifyDate" column="modify_date" jdbcType="TIMESTAMP"/>
    </resultMap>
	
	<sql id="BaseColumn">
		id,user_id,role_id,deleted,creator,create_date,modifier,modify_date
	</sql>
	
	<sql id="BaseColumnComplex">
		A.id,A.user_id,A.role_id,A.deleted,A.creator,A.create_date,A.modifier,A.modify_date
	</sql>
	
    <!-- 多表关联查询 -->  
    <select id="selectComplex" resultMap="ResultMapBase">
		select <include refid="BaseColumnComplex"/>
	 	from sys_user_role A
	 	<include refid="sqlwhereSearch"/>
    </select>

	<!-- 查询条件 -->
	<sql id="sqlwhereSearch">
		<where>
			<if test="name !=null and name != ''">
				<!--AND A.name = CONCAT('%',#{name},'%')  -->
			</if>
		</where>
	</sql>
</mapper>